/* page/user/user.wxss */
.containerContext{
  height: 642px;
  overflow: hidden;
}
#myLogin{
 
  height: 30vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
.bgimg{
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: -1;
}
.bg{
  height: 30vh;
  width: 100%;
  font-weight: bolder;
}

#myIcon{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

#myName{
  color:white;
}

.content{
  position: relative;
  margin-top: 30px;
  height: 450px;
  display: flex;
  flex-wrap: wrap;
  font-size: 18px;
  font-weight: bold;
}
.content >image{
  position:absolute;
  top: -30px;
  width: 100%;
  height: 100%;
  z-index: -1;
}


.noLogin{
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
align-items: center;
font-size: 40rpx;
font-weight: bolder;
color: blue;
}
.noLogin image{
  width: 100%;
  height: 500rpx;
  margin-bottom: 50rpx;

}

.content_list {
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 50vw;
  border-right:2px solid gray;
  border-bottom:2px solid gray;
  height: 250rpx;
}
.content_list:nth-child(3){
  border-right: 0;
}

.content_list image{
width: 70%;
height: 100rpx;
}
