/* pages/register/register.wxss */
.maincontainer{
  width: 375px;
  height: 600px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}

.avatar-wrapper{
  margin-top: 30px;
  height: 150px;
  width: 150px;
  background-color: white;
}

.avatar-wrapper >image{
  width: 150px;
  height: 150px;
}

.name{
  width: 100%;
  height: 50px;
  margin-top: 50px;
  display: flex;
  border: 1px lightgray solid;
  justify-content: center;
  align-items: center;
}

.name > input{
  width: 300px;
  margin-left: 20px;
}

.register{
  width: 100px;
  height: 50px;
  font-size: 18px;
  line-height: 30px;
  background-color: lightskyblue;
  margin-top: 100px;
}