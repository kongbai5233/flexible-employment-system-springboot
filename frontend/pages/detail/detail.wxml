
<!--page/detail/detail.wxml-->
<view class='container'>
  <view class='title'>{{title}}</view>
  <view class='poster'>
    <image src='{{theArticle.poster}}' mode='widthFix'></image>
  </view>
  <view class='content'>{{theArticle.content}}</view>
  <view class='add_date'>时间：{{theArticle.add_date}}</view>
  <view class='add_date'>作者：{{theArticle.write}}</view>
  <button wx:if='{{isAdd}}' plain bindtap='cancelFavorites' style="background-color: lightpink;">♥已收藏</button>
  <button wx:else plain bindtap='addFavorites' >♥点击收藏</button>
  <button wx:if="{{my_art}}" bindtap='removeTap' type="warn">删除</button>
</view>
